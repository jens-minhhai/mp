{% extends 'layout/default.twig' %}
{% import 'library/marco/alert/flash.twig' as marco_flash %}

{% block content %}
    {% set view_form = {
            attribute: {
            },
            blocks: {
                account: {
                    class: '',
                    error: attribute(error, 'auth')|default({}),
                    file: 'page/auth/admin/form/add/account.twig',
                    option: {
                        id: 'account-form'
                    },
                    target: target,
                    title: msg('5.2', 'Account Information')
                },
                basic: {
                    class: '',
                    error: attribute(error, 'auth')|default({}),
                    file: 'page/auth/admin/form/add/basic.twig',
                    option: {
                        id: 'basic-form'
                    },
                    target: target,
                    title: msg('5.3', 'Personal Information')
                }
            },
            panel: {
                file: 'component/common/form/panel.twig',
                option: {
                    back_url: url(base_url)
                }
            },
        }
    %}

    {{ marco_flash.show('message') }}

    {% include 'library/form/builder.twig' with {
        view_form : view_form
    } %}
{% endblock %}