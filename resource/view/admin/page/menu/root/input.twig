{% extends 'layout/default.twig' %}
{% import 'library/marco/alert/flash.twig' as marco_flash %}

{% block content %}
    {% set view_form = {
            attribute: {
            },
            blocks: {
                basic: {
                    class: '',
                    error: attribute(error, 'menu')|default({}),
                    file: 'page/menu/root/form/basic.twig',
                    option: {
                        id: 'basic-form'
                    },
                    target: target,
                    title: msg('4.5', 'Basic')
                }
            },
            panel: {
                file: 'component/common/form/panel.twig',
                option: {
                    back_url: url(base_url ~ '/root')
                }
            },
        }
    %}

    {{ marco_flash.show('message') }}

    {% include 'library/form/builder.twig' with {
        view_form : view_form
    } %}
{% endblock %}