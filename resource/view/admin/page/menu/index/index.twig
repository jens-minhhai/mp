{% extends 'layout/default.twig' %}
{% import 'library/marco/alert/flash.twig' as marco_flash %}

{% block content %}
    <div class="card">
        <div class="card-header border border-top-0 border-right-0 border-left-0">
            {{ msg('4.6', 'Menu') }}
        </div>
        <div class="card-body">
            {{ marco_flash.show('message') }}

            <form method='post' class='j-form' action='{{ url("#{base_url}/modify") }}'>
                {{ form_crsf() }}

                {% include 'component/common/table/option.twig' with {
                    option : form.master.mode,
                    base_url: base_url,
                    name: 'menu[option]'
                }%}

                <table class="j-data_table table table-bordered">
                    <thead>
                        <tr>
                            <th class='text-center'>
                                <label class="checkbox--container">
                                    <input class='j-checkAll' type='checkbox' data-target='j-checkItem'/>
                                    <span class="checkmark"></span>
                                </label>
                            </th>
                            <th>{{ msg('4.12', 'Mode') }}</th>
                            <th class='w-25'>{{ msg('4.7', 'Title') }}</th>
                            <th class='w-25'>{{ msg('4.8', 'Url') }}</th>
                            <th class='w-25'>{{ msg('4.9', 'Caption') }}</th>
                            <th class='w-5'>{{ msg('4.10', 'Priority') }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in data %}
                            <tr>
                                <td class='text-center'>
                                    <label class="checkbox--container">
                                        <input class='j-checkItem' type='checkbox' name='menu[id][]' value='{{ item.id }}'/>
                                        <span class="checkmark"></span>
                                    </label>
                                </td>
                                <td>{{ mode(item.mode, 'menu.index.master.mode') }}</td>
                                <td>
                                    <a href='{{ url("#{base_url}/#{item.id}/edit") }}' title='{{ item.title }}'>
                                        {{ item.display|raw }}
                                    </a>
                                </td>
                                <td>{{ item.url }}</td>
                                <td>{{ item.caption }}</td>
                                <td>{{ item.priority }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </form>
        </div>
    </div>
{% endblock %}