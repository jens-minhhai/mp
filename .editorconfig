root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space

[*.php]
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.twig]
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.css]
indent_size = 4

[*.scss]
indent_size = 4

[*.js]
indent_size = 4

[*.jsx]
indent_size = 4

[*.json]
indent_size = 2
